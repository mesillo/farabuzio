 <script type="text/javascript">
//<![CDATA[
let hideDivByName = ( divName ) => {
	let div = document.getElementById( divName );
	if( div.style.display === "none" ) {
		div.style.display = "block";
	} else {
		div.style.display = "none";
	}
};
//]]>
</script>

